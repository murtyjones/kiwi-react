{
  "hosting": {
    "public": "build",
    "ignore": [],
    "rewrites": [
      {
        "source": "**"
        , "destination": "/index.html"
        , "type": 503
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=7200"
        } ]
      }
    ]
  }
}
