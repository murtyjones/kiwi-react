{
  "hosting": {
    "public": "build",
    "ignore": [],
    "redirects": [ {
      "source": "**",
      "destination": "/maintenance.html",
      "type": 307
    } ],
    "rewrites": [
      {
        "source": "**"
        , "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=7200"
        } ]
      },
      {
        "source": "/maintenance.html",
        "headers": [ {
          "key": "status",
          "value": "503"
        } ]
      }
    ]
  }
}
